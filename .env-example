# Easy!Appointments example environment file
# Copy to .env and fill values for your environment. Never commit real secrets.

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=America/Sao_Paulo

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=easyappointments
DB_USERNAME=user
DB_PASSWORD=password

# REQUIRED IN PRODUCTION: Token encryption key (32+ bytes)
# Generate with: openssl rand -base64 32
# Example: WA_TOKEN_ENC_KEY=dGhpc2lzYXZlcnlzZWN1cmUzMmJ5dGVrZXkxMjM0NTY3ODA=
WA_TOKEN_ENC_KEY=

# Optional: Timeouts for WPPConnect (seconds)
WPPCONNECT_TIMEOUT=30
WPPCONNECT_CONNECT_TIMEOUT=10

# Mail (example uses mailpit in docker-compose)
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Optional: logging / debug
LOG_LEVEL=info


